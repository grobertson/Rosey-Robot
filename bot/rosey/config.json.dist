{
  "_note": "All '_comment' fields in this file are for documentation only and are ignored at runtime.",
  "_comment": "Rosey Configuration v2.0 - Sprint 9 Architecture",
  "version": "2.0",
  
  "nats": {
    "_comment": "NATS event bus configuration (REQUIRED)",
    "url": "nats://localhost:4222",
    "connection_timeout": 5,
    "max_reconnect_attempts": -1,
    "reconnect_delay": 2
  },
  
  "database": {
    "_comment": "Database service configuration",
    "path": "bot_data.db",
    "run_as_service": true
  },
  
  "platforms": [
    {
      "_comment": "Platform configuration - supports multi-platform (future)",
      "type": "cytube",
      "name": "primary",
      "enabled": true,
      "domain": "https://cytu.be",
      "channel": "YourChannelName",
      "user": ["YourUsername", "YourPassword"],
      "response_timeout": 1,
      "restart_delay": 5
    }
  ],
  
  "shell": {
    "_comment": "PM command interface for moderators",
    "enabled": true,
    "host": "localhost",
    "port": 5555
  },
  
  "logging": {
    "_comment": "Logging configuration",
    "level": "WARNING",
    "chat_log_file": "chat.log",
    "media_log_file": "media.log"
  },
  
  "llm": {
    "_comment": "LLM (AI chat) integration - optional",
    "enabled": false,
    "provider": "ollama",
    "system_prompt_file": "prompt.md",
    "max_context_messages": 10,
    "temperature": 0.7,
    "max_tokens": 500,
    "log_only": false,
    "openai": {
      "api_key": "sk-YOUR_OPENAI_API_KEY",
      "model": "gpt-4o-mini",
      "base_url": "https://api.openai.com/v1"
    },
    "ollama": {
      "base_url": "http://localhost:11434",
      "model": "llama3"
    },
    "openrouter": {
      "api_key": "YOUR_OPENROUTER_API_KEY",
      "model": "anthropic/claude-3-haiku",
      "site_url": "https://your-site.com",
      "site_name": "Rosey CyTube Bot"
    },
    "triggers": {
      "enabled": true,
      "direct_mention": true,
      "commands": ["!ai", "!ask"],
      "ambient_chat": {
        "enabled": false,
        "every_n_messages": 20,
        "randomness": 0.5
      },
      "keywords": [
        {
          "phrases": ["toddy", "the toddy"],
          "probability": 0.1,
          "cooldown_seconds": 300
        },
        {
          "phrases": ["boobs", "boobies"],
          "probability": 0.05,
          "cooldown_seconds": 600
        }
      ],
      "greetings": {
        "enabled": false,
        "on_join": {
          "enabled": true,
          "probability": 0.2,
          "idle_threshold_minutes": 60,
          "moderators_only": false,
          "specific_users": {
            "alice": 1.0,
            "bob": 0.5
          }
        },
        "on_status_change": {
          "enabled": false,
          "probability": 0.1
        }
      }
    }
  },
  
  "plugins": {
    "_comment": "Plugin system configuration (future)",
    "enabled": true,
    "directory": "plugins/",
    "auto_reload": false
  }
}
